<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO NIT PATNA"
        android:textSize="30dp"
        android:paddingLeft="16sp"
        android:background="#D3D3D3"
        android:textColor="#DAA520"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="1. Student Details"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_marginLeft="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yourName"
        android:hint="Enter Your Name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:textSize="20dp"
        android:inputType="textImeMultiLine"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Roll no"
        android:id="@+id/yourRoll"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:textSize="20dp"
        android:layout_marginBottom="40dp"
        android:inputType="textImeMultiLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. AVAILABLE FACILITIES IN COLLEGE"
        android:textSize="18dp"
        android:paddingLeft="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hostel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16sp"
            android:layout_marginLeft="16sp"
            android:text="HOSTEL"
            android:textAppearance="?android:textAppearanceMedium" />

       <CheckBox
           android:id="@+id/mess"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:padding="16sp"
           android:text="MESS"
           android:layout_marginBottom="30dp"
           android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. contest wons"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <Button
            android:layout_width="48dp"
            android:onClick="decrement"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="8dp"
            android:layout_height="48dp"
            android:text="-"/>

        <TextView
            android:id="@+id/contest_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_marginRight="8dp"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="increment"

            android:text="+"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deduct"
        android:text="Deductable Fee  "
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16sp"
        android:textSize="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="SAVE"
        android:onClick="save"
        android:textSize="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="10dp"
        android:text="get form detaill to your email"
        android:textSize="18dp"
        android:onClick="goToemail"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="phrases"
        android:textSize="18dp"
        android:onClick="hello"/>




</LinearLayout>
</ScrollView>